<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtIndex"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            tools:text="1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgFlag"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:padding="@dimen/_2sdp"
            android:src="@color/red" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            tools:text="Team name" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtMatchPlayed"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="3"
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtWin"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="3"
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtDraw"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="3"
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtlose"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="3"
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtPoints"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        app:fontFamily="@font/font_bold"
        tools:text="3"
        tools:visibility="gone" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtGf"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtGa"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text="@string/ga"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtGd"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        tools:text="3"
        tools:visibility="gone" />

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLast1"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_lose_score" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLast2"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_win_score" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLast3"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_draw_score" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLast4"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_blank_score" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgLast5"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/ic_blank_score" />

    </LinearLayout>
</LinearLayout>