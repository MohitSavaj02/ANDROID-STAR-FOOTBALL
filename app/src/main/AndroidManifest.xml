<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="DiscouragedApi,LockedOrientationActivity">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".app.StarFootballApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_logo_200"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BaseProject"
        tools:targetApi="31">
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.live.LiveActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.team.TeamActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.prediction.PredictionActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.result.ResultActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.schedule.ScheduleActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.winner.WinnerActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.team.TeamDetailActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.standing.StandingActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.channel.ChannelActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>